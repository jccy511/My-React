sideBarWidth = 230px
navBarHeight = 64px
contentPadding = 25px 35px
mainDivWidth = 100vw - sideBarWidth


.App
  max-height: 100vh
  height: 100vh

  @media screen and (max-width: 568px)
    padding-top: navBarHeight - 8px;
    max-height: 100vh
    height: 100vh

.content
  padding: contentPadding
  line-height: 1.5em;
  width: 100%;
  height: 100%;
  & > div:first-child
    height: 100%

.footer
  position: absolute;
  width: 100%;
  bottom: 0;

.main
  text-align: center;
  width: 100vw;
  &.margin-left
    width: "calc(100vw - %s)" % sideBarWidth

.hidden
  display: none;

.margin-left
  margin-left: sideBarWidth
